{
  "name": "docusafely-desktop",
  "version": "1.0.13",
  "main": "src/main.js",
  "description": "DocuSafely Desktop - Document masking and PII detection application",
  "author": "hielf",
  "license": "ISC",
  "homepage": "https://github.com/hielf/docusafely-desktop",
  "scripts": {
    "start": "electron .",
    "start:mac": "DOCUSAFELY_PLATFORM=darwin electron .",
    "start:win": "DOCUSAFELY_PLATFORM=win32 electron .",
    "start:linux": "DOCUSAFELY_PLATFORM=linux electron .",
    "prebuild": "node scripts/bundle-backend.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "dist": "npm run build",
    "test:js": "jest --runInBand",
    "test": "npm run test:js",
    "test:integration": "jest tests/integration/ --runInBand",
    "test:pdf": "jest tests/integration/pdf-processing.test.js tests/integration/pdf-content-analysis.test.js --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:all": "npm run test && npm run test:integration"
  },
  "keywords": [
    "electron",
    "document-masking",
    "pii-detection",
    "privacy",
    "desktop-app"
  ],
  "dependencies": {
    "custom-electron-titlebar": "^4.2.8"
  },
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.docusafely.desktop",
    "productName": "DocuSafely",
    "icon": "build/icon.png",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "compression": "maximum",
    "files": [
      "src/main.js",
      "src/preload.js",
      "src/index.html",
      "backend/dist/**/*",
      "example/sample.txt"
    ],
    "extraFiles": [
      {
        "from": "backend/dist",
        "to": "backend/dist"
      }
    ],
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "backend/dist"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "electronLanguages": [
        "en"
      ],
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DocuSafely"
    },
    "portable": {
      "artifactName": "DocuSafely Portable.exe"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "maintainer": "hielf"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null
    },
    "publish": null
  }
}